<h1>New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <div class="mb-2">
    <%= f.input :name %>
  </div>
  <div class="mb-2">
    <%= f.input :address %>
  </div>
  <div class="mb-2">
    <%= f.input :phone_number %>
  </div>
  <div class="mb-2">
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Choose a category" %>
  </div>
  <%= f.submit "Save", class: "btn btn-success" %>
<% end %>

<%= link_to "Back", root_path, class: "btn btn-secondary mt-2" %>
