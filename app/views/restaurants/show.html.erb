<h1><%= @restaurant.name %></h1>
<p><strong>Category:</strong> <%= @restaurant.category %></p>
<p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
<p><strong>Address:</strong> <%= @restaurant.address %></p>

<h2>Reviews</h2>
<% if @restaurant.reviews.any? %>
  <ul class="list-group mb-3">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %> 
        <% review.rating.times do %>
          <i class="fa-solid fa-star"></i>
        <% end %>
        <% (5 - review.rating).times do %>
          <i class="fa-regular fa-star"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Don't have any reviews yet!.</p>
<% end %>


<h3>Add Review</h3>
<%= simple_form_for([@restaurant, Review.new]) do |f| %>
  <div class="mb-2">
    <%= f.input :content %>
  </div>
  <div class="mb-2">
    <%= f.input :rating, as: :integer, input_html: { min: 0, max: 5 } %>
  </div>
  <%= f.submit "Submit Review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", root_path, class: "btn btn-secondary mt-3" %>
